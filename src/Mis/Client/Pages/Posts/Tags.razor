@page "/posts/tag"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Tag)]

@inject IStringLocalizer<Tag> L

<FshTitle Title="@L["Tags"]" Description="@L["Manage Tags."]" />

<EntityTable @ref="_table" TEntity="TagDto" TId="Guid" TRequest="TagViewModel" Context="@Context">

    <AdvancedSearchContent>
      
   </AdvancedSearchContent>

    <EditFormContent>
        <MudItem xs="12" md="6">
            <MudTextField Label="@L["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>
           <MudItem xs="12" md="6">
            <MudTextField Label="@L["NickName"]" For="@(() => context.NickName)" @bind-Value="context.NickName" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="@L["ArtCount"]" For="@(() => context.ArtCount)" @bind-Value="context.ArtCount" />
        </MudItem>
      
    </EditFormContent>

</EntityTable>